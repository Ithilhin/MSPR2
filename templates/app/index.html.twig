{# Extends the base layout from 'base.html.twig' to ensure consistency across the site. #}
{% extends 'base.html.twig' %}

{# Sets the title of the web page to 'MSPR2'. This title will be displayed in the browser tab. #}
{% block title %}Canop√©es{% endblock %}

{# Custom stylesheets block to include additional CSS files. #}
{% block stylesheets %}
    {# Link to Bootstrap's Lux theme for styling. #}
    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
    {# Includes CSS files generated by Webpack Encore for 'app' entry. #}
    {{ encore_entry_link_tags('app') }} 
{% endblock %}

{# Main content block where page-specific content will be inserted. #}
{% block body %}
<div id="app"></div> {# Placeholder div for Vue.js or React app, if used. #}
{% endblock %}

{# Block for JavaScript files to ensure they are loaded at the end of the document for faster page loads. #}
{% block javascripts %}
    {# Includes JavaScript files generated by Webpack Encore for 'app' entry. #}
    {{ encore_entry_script_tags('app') }}
    {# Link to Bootstrap's JavaScript bundle which includes Popper.js. #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}